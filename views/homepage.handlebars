{{#each posts as |post| }}
<div class="row align-center mb-5">
  <div class="col-md-9">
    <h3><a href="/posts/{{id}}">{{post_name}}</a></h3>
    <p>{{post_description}}</p>
    <h5>Created by: {{user.name}}</h5>
    <h6>Created on {{format_date post_date_created}}</h6>
    <h6>Post Id: {{id}}</h6>
    
    </div>
</div>
{{/each}}
