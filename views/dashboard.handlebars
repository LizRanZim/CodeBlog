
<button class="button is-danger m-3" id="make-post">Create Post</button>

<h1 class="title">Welcome {{posts.0.user.user_name}}</h1>

{{#each posts as |post| }}

{{!-- <h1 class="title">Welcome {{post.user.user_name}}</h1> --}}

<div class="row align-center mb-5">
    <div class="col-md-9">
       <a href="/posts/{{post.id}}">
         <h1 class="title is-4 has-text-link">{{post_name}}</h1>
        </a>
        <p>{{post.post_description}}</p>
        <h5>Created by: {{post.user.user_name}}</h5>
        <h6>Created on {{format_date post.post_date_created}}</h6>
        <h6>User Id: {{id}}</h6>
        <h6>Post Id: {{post.id}}</h6>

        <button class="button is-danger m-3" id="delete-post-btn" data-id={{post.id}}>Delete Post</button>

        <button class="button is-danger m-3" id="edit-post-btn" data-id={{post.id}}>Edit Post</button>

    </div>
<div class="row align-center mb-5 edit-post-option display-none">
  <div class="column">
   
    <p>Edit Post Title:</p>
    <textarea class="input is-danger m-3" type="text" id="post-name">{{post_name}}</textarea>
    <p>Edit Post Content:</p>
    <textarea class="textarea is-danger m-3" id="post-description"> {{post_description}}</textarea>

    <button class="button is-danger m-3" id="save-post-btn" data-id={{post.id}}>Save Edited Post</button>
    
  </div>
</div>

</div>
{{/each}}


<script src="js/dashboard.js"></script>


